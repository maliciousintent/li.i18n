@import('nib')
@import url('http://fonts.googleapis.com/css?family=Patrick+Hand+SC');

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabThi-webfont.eot')
    src url('../font/ColabThi-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabThi-webfont.woff') format('woff'),
         url('../font/ColabThi-webfont.ttf') format('truetype'),
         url('../font/ColabThi-webfont.svg#ColaborateThinRegular') format('svg')
    font-weight 200
    font-style normal
}

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabLig-webfont.eot')
    src url('../font/ColabLig-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabLig-webfont.woff') format('woff'),
         url('../font/ColabLig-webfont.ttf') format('truetype'),
         url('../font/ColabLig-webfont.svg#ColaborateLightRegular') format('svg')
    font-weight 300
    font-style normal
}

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabMed-webfont.eot')
    src url('../font/ColabMed-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabMed-webfont.woff') format('woff'),
         url('../font/ColabMed-webfont.ttf') format('truetype'),
         url('../font/ColabMed-webfont.svg#ColaborateMediumRegular') format('svg')
    font-weight 700
    font-style normal
}

_yellow = #ffca30
_complementary = #005cae

.tc
  text-align center
.tl
  text-align left
.tr
  text-align right

body
  font-family 'Colaborate', 'Helvetica', Arial, sans-serif
  font-weight 300
  font-size 16px
  -webkit-font-smoothing antialiased
  min-width 540px

h1, h2, h3, h4, h5, h6, b, strong
  font-weight 200

.navbar
  border-bottom 4px solid _yellow
  box-shadow 0 2px 2px rgba(#000, 0.2)

  .header
    p
      color #CCC
      font-weight 700
      font-size 20px
      margin-bottom 0
      margin-top 8px
      text-align center
      text-shadow 1px 1px 1px #FFF

.fullbar
  &.dark
    padding-top 80px
    padding-bottom 40px
    background url('../img/drawings-pattern.jpg') center center no-repeat #EEE
    background-size cover
    border-bottom 4px solid _yellow
    box-shadow inset 0 -6px 6px -6px rgba(#000, 0.2)

    text-shadow 1px 1px 1px darken(_yellow, 40%)
    h1
      font-family 'Patrick Hand SC', 'Colaborate', 'Helvetica', Arial, sans-serif
      font-size 38px
      font-weight 400
      text-align center
      color #181818
      margin-bottom 20px
      letter-spacing 4px
    h2
      font-family 'Patrick Hand SC', 'Colaborate', 'Helvetica', Arial, sans-serif
      font-size 22px
      text-align center
      font-weight 300
      color #333
      line-height 32px
      letter-spacing 1px

      a
        color #333
        font-style italic
        text-decoration none
        display inline-block
        line-height 19px
        cursor pointer
        border-bottom 2px dotted darken(_yellow, 30%)
        &:hover
          border-bottom 2px dotted #333


    b, strong
      font-weight 200

b, strong
  font-weight 700

.container
  width 500px !important
  padding-left 20px
  padding-right 20px

hr
  border none
  border-bottom 2px solid #EEE

a
  color darken(_complementary, 20%)
  font-weight 300
  &:hover
    color _complementary

img.drop
  width 32px
  height 32px

.span11
  p
    margin-top 5px
    margin-bottom 20px

p.preview
  text-align right
  img
    width auto
    height auto
    max-width 100px
    max-height 100px
    &[src=""]
      display none
  span
    color #999
    font-size 13px

#browse
  background none
  background-color _complementary
  padding 8px 18px
  position relative
  font-size 14px
  user-select none
  text-decoration none
  color #fff
  text-shadow 0 -1px 1px darken(_complementary, 40%)
  font-weight 700
  background-image  linear-gradient(top, lighten(_complementary, 10%) 0%, darken(_complementary, 10%) 100%)
  box-shadow  inset 0px 1px 0px lighten(_complementary, 20%), 0px 6px 0px darken(_complementary, 40%)
  border-radius  5px
  &:hover
    background none
    background-color _complementary
    background-image  linear-gradient(top, darken(_complementary, 2%) 0%, lighten(_complementary, 2%) 100%)
  &:active
    color #FFF
    text-shadow 0 -1px 1px darken(_complementary, 60%)
    background darken(_complementary, 10%)
    box-shadow inset 0px 1px 0px lighten(_complementary, 20%), inset 0px -1px 0px darken(_complementary, 40%)
    top 6px

.table-container
  min-height 30px
  table.table
    margin 20px 0
    tr
      th
        font-weight 300
        font-size 24px
        padding-top 12px
        padding-bottom 20px

      td
        border-top none
        border-bottom 1px solid #DDD
        padding 15px
        &:first-child
          font-weight 700
          font-size 15px
          word-wrap break-word
          word-break break-all
        p.original
          font-family Monaco, Menlo, Consolas, "Courier New", monospace
          font-size 14px
          white-space pre
          white-space pre-wrap
        textarea
          font-family Monaco, Menlo, Consolas, "Courier New", monospace
          height 30px
          transition height 0.3s ease
          background #FAFAFA
          resize vertical
          cursor text !important
          background rgba(#FFF, 0.9)
          margin-bottom 0
        label.checkbox
          margin-left 8px
      &.fuzzy-true
        td
          box-shadow inset 0 14px 14px -14px lighten(_yellow, 40%), inset 0 -14px 14px -14px lighten(_yellow, 40%)
          background lighten(_yellow, 95%)
          border-bottom-color lighten(_yellow, 40%)
          textarea[readonly]
            background rgba(_yellow, 0.1)

